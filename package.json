{
  "name": "@adobe/aem-boilerplate",
  "private": true,
  "version": "1.3.0",
  "description": "Starter project for Adobe Helix",
  "scripts": {
    "lint:js": "eslint .",
    "lint:css": "stylelint \"blocks/**/*.css\" \"styles/*.css\"",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "build:uswds": "sass --load-path=node_modules/uswds/dist/scss --load-path=node_modules --style=compressed styles/uswds/uswds.scss styles/uswds-compiled.css",
    "watch:uswds": "sass --load-path=node_modules/uswds/dist/scss --load-path=node_modules --watch styles/uswds/uswds.scss styles/uswds-compiled.css",
    "build:uswds-buttons": "sass --load-path=node_modules/uswds/dist/scss --load-path=node_modules --load-path=styles/uswds --style=compressed styles/uswds-buttons.scss styles/uswds-buttons.css",
    "build:uswds-blocks": "sass --load-path=node_modules/uswds/dist/scss --load-path=node_modules --load-path=styles/uswds --style=compressed blocks/card/card.scss blocks/card/card.css && sass --load-path=node_modules/uswds/dist/scss --load-path=node_modules --load-path=styles/uswds --style=compressed blocks/grid/grid.scss blocks/grid/grid.css",
    "watch:uswds-blocks": "sass --load-path=node_modules/uswds/dist/scss --load-path=node_modules --load-path=styles/uswds --watch blocks/card:blocks/card blocks/grid:blocks/grid",
    "build:uswds-utilities": "sass --load-path=node_modules/uswds/dist/scss --load-path=node_modules --style=compressed styles/uswds/uswds-utilities-only.scss styles/uswds-utilities.css",
    "build": "npm run build:uswds-buttons && npm run build:uswds-blocks"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adobe/aem-boilerplate.git"
  },
  "author": "Adobe",
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/adobe/aem-boilerplate/issues"
  },
  "homepage": "https://github.com/adobe/aem-boilerplate#readme",
  "devDependencies": {
    "@babel/eslint-parser": "7.28.5",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.32.0",
    "sass": "^1.94.2",
    "stylelint": "16.25.0",
    "stylelint-config-standard": "39.0.1",
    "uswds": "^2.14.0"
  }
}
